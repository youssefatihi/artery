<?xml version="1.0" encoding="UTF-8"?>
<services>
    <service type="DrowsinessDetectionService">
        <listener port="2003" />  <!-- Port standard pour les DENM -->
        <filters>
            <name pattern="drowsy_driver" />
        </filters>
    </service>
    <service type="DrowsinessAlertReceiverService">
        <listener port="2003" />  
        <filters>
            <name pattern="drowsy_driver" match="inverse" />
        </filters>
    </service>
    <service type="artery.application.CaService">
        <listener port="2001" />
    </service>
</services>