<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    
    <!-- Définition des types de véhicules -->
    <vType id="car" vClass="passenger" length="4.5" minGap="2.5" maxSpeed="33.33" accel="1" decel="4.5" sigma="0.5" color="1,1,0"/>
    <vType id="truck" vClass="truck" length="12.0" minGap="2.5" maxSpeed="25.0" accel="1.3" decel="4.0" sigma="0.5" color="0,0,1"/>
    <vType id="emergency" vClass="emergency" length="5.0" minGap="2.5" maxSpeed="41.67" accel="3.0" decel="5.0" sigma="0.5" color="1,0,0"/>
    
    <!-- Définition de la route -->
    <route id="route_B" edges="B1.2102 B2"/>

    
    <!-- Véhicules -->
    <!-- Véhicule A (celui qui va effectuer le changement de voie dangereux ) -->
    <vehicle id="vehA" type="car" route="route_B" depart="0" departLane="0" departSpeed="25">
    </vehicle>

    <!-- Véhicules B, C, D qui vont être dans la voie cible avec des vitesses superieures à A pour le rattraper  -->
    <vehicle id="vehB" type="car" route="route_B" depart="2" departLane="1" departSpeed="30"/>
    <vehicle id="vehC" type="truck" route="route_B" depart="4" departLane="1" departSpeed="25"/>
    <vehicle id="vehD" type="car" route="route_B" depart="6" departLane="1" departSpeed="33"/>
    
    <!-- Véhicule d'urgence -->
    <vehicle id="emergencyVeh" type="emergency" route="route_B" depart="8" departLane="2" departSpeed="30"/>
</routes>